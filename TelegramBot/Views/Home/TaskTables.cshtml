@{

    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


<div class="content-wrapper">  
  <div class="row">
    <div class="col-lg-6 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
                    <span><h4 class="card-title" style="display:inline-block">Güncel Görevler</h4> <button type="button" class="openAddTaskModal"  data-bs-toggle="modal" data-bs-target="#addTaskModal" style="border:none;background-color:white"><i class="fa-solid fa-circle-plus fa-lg ms-1" style="color: #184dc9;"></i></button></span>
         
         
          <hr/>
          
          <div class="table-responsive">
            <table class="table" id="OnGoingTable">
              <thead>
                <tr>
                  <th>Projeyi Veren</th>
                  <th>Proje Adı</th>
                  <th>Başlangıç </th>
                  <th>Durumu</th>
                </tr>
              </thead>
              <tbody id="OnGoingTableBody">
                
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-6 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
                    <span><h4 class="card-title" style="display:inline-block">Gelecek Görevler</h4> <button class="openAddTaskModal" type="button" data-bs-toggle="modal" data-bs-target="#addTaskModal" style="border:none;background-color:white"><i class="fa-solid fa-circle-plus fa-lg ms-1" style="color: #184dc9;"></i></button></span>
          <hr />
          
          <div class="table-responsive">
                        <table class="table table-hover " id="futureTable">
              <thead>
                <tr>
                  <th>Projeyi Veren</th>
                  <th>Proje Adı</th>
                  <th>Veriliş </th>
                  <th>Durumu</th>
                </tr>
              </thead>
              <tbody id="futureTableBody">
                
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-12 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Çalışan Proje Durumları</h4>
         
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th> Çalışan </th>
                  <th> Adı/Soyadı </th>
                  <th>Proje</th>
                  <th> İlerleme </th>
                  <th> Durum </th>
                  <th> Bitiş Tarihi </th>
                </tr>
              </thead>
              <tbody id="taskUserList">
                
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
   
    

  </div>
   
</div>


<div class="modal fade" id="addTaskModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered  " role="document">
        <div class="modal-content col-6">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle" >Yeni Görev</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <i class="fa-regular fa-circle-xmark fa-xl" style="color: white;"></i>
                </button>
            </div>

            <ul class="nav nav-tabs nav-fill" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="project-add-details-tab" data-bs-toggle="tab" href="#project-add-details" role="tab" aria-controls="project-add-details" aria-selected="true">Proje Detay</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link " id="project-add-members-tab" data-bs-toggle="tab" href="#project-add-members" role="tab" aria-controls="project-add-members" aria-selected="true">Çalışanlar</a>
                </li>
            </ul>

            <div class="modal-body">
                <div class="tab-content">
                    <div class="tab-pane fade active show" id="project-add-details" role="tabpanel">
                        <h5><b>Projeyi Veren</b></h5>
                        <div class="form-group row align-items-center">
                            <label class="col-3">Adı-Soyadı</label>
                            <input class="form-control project-detail-form col" type="text" placeholder="Ad-Soyad" name="project-giver" />
                        </div>
                        

                        <hr />
                        
                        <h5><b>Genel Detaylar</b></h5>
                        <div class="form-group row align-items-center">
                            <label class="col-3">Adı</label>
                            <input class="form-control project-detail-form col" type="text" placeholder="Projenin Adı" name="project-name" />
                        </div>
                        <div class="form-group row">
                            <label class="col-3">Açıklama</label>
                            <textarea class="form-control project-detail-form col" rows="3" placeholder="Proje Açıklaması" name="project-description"></textarea>
                        </div>

                        <hr />

                        <h5><b>Proje Zaman Çizelgesi</b></h5>

                        <div class="form-group row align-items-center">
                            <label class="col-3">Başlangıç Tarihi</label>
                            <input class="form-control project-detail-form col" type="date" placeholder="Projenin Başlangıcı" name="project-start-date" />
                        </div>
                        <div class="form-group row">
                            <label class="col-3">Bitiş Tarihi</label>
                            <input class="form-control project-detail-form col" type="date" placeholder="Projenin Bitişi" name="project-end-date" />
                        </div>
                    </div>

                    <div class="tab-pane fade" id="project-add-members" role="tabpanel">
                        <div class="form-members">

                            <span>Çalışan Kategorisi</span>
                            <div class="btn-group ms-3">
                               
                                <select id="memberCategories" class="form-select">
                                    <option value="">Kategori Seçiniz</option>
                                </select>
                            </div>  
                            <div class="input-search mt-2 mb-3">
                                <input type="search" class="form-control input-radius " id="searchInput" onkeyup="filterUsers()" placeholder="Çalışan filtrele" aria-label="Filter Members" />
                            </div>

                            <div id="membersList">
                                <div class="custom-control custom-checkbox" id="membersListCheckbox">
                                  
                                </div>
                            </div>

                            
                        </div>
                    </div>
                    



                </div>
               
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveTaskBtn">Save changes</button>
            </div>
        </div>
    </div>
</div>



