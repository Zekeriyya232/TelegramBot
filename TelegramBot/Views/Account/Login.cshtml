@{
}
<div class="container py-5 h-100 " >
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-xl-10">
            <div class="card rounded-3 text-black">
                <div class="row  g-0">
                    <div class="col-lg-6">
                        <div class="card-body p-md-5 mx-md-4">

                            <div class="text-center">
                                <img src="~/img/loginImg.jpg"
                                     style="width:100%;" alt="logo">
                                <h4 class="mt-1 mb-5 pb-1">Takım Yönetim Merkezi</h4>
                            </div>

                            <form asp-action="Login">
                                <div asp-validation-summary="ModelOnly" class="text-danger small"></div>


                                <div class="form-outline mb-4">
                                    <span asp-validation-for=" Email" class="text-danger small"></span>
                                    <input asp-for=" Email" type="email" class="form-control"
                                           placeholder="Email Adress" />
                                    <label class="form-label" asp-for=" Email">Username</label>

                                </div>

                                <div class="form-outline mb-4">
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                    <input asp-for="Password" type="password" class="form-control" placeholder="*******" />
                                    <label class="form-label" asp-for="Password">Password</label>

                                </div>

                                <div class="text-center pt-1 mb-5 pb-1">
                                    <button class="btn btn-primary col-12 gradient-custom-2 mb-3" type="submit">
                                        Log
                                        in
                                    </button>
                                    <br />
                                    <a class="text-muted" href="#!">Forgot password?</a>
                                </div>

                                <div class="d-flex align-items-center justify-content-center pb-4">
                                    <p class="mb-0 me-2">Don't have an account?</p>
                                    <a asp-action="Register" role="button" class="btn btn-outline-danger ml-1">Create new</a>
                                </div>

                            </form>

                        </div>
                    </div>
                    <div class="col-lg-6 d-flex align-items-center gradient-custom-2 login-banner">
                        <div class="text-white col-10 offset-1 px-3 py-4 p-md-5 mx-md-4 align-items-center">
                            <h2 class="mb-4" style="text-align:center">HOŞGELDİNİZ</h2>
                            <hr />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
