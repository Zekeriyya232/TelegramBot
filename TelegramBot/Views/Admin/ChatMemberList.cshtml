@model List<TelegramBot.Entities.ChatMembersDB>

@{

    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    int i = 1;

    var memberList = ViewBag.Members as List<Members>;

}

<div class="container">
    <div id="table-header" class="col-12 p-3 rounded-top">
        <span>
            Telegram Bekleyen Kişiler
        </span>
        
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>*</th>

                <th>Kullanıcı Adı</th>
                <th>Telegram Id</th>
                <th>Adı</th>
                <th>Soyadı</th>
                <th>Onay Durumu</th>

            </tr>
        </thead>
        <tbody>



            @foreach (var item in Model)
            {

                <tr>
                    <th scope="row">@i</th>
                    <td>@item.userName</td>
                    <td>@item.telegramId</td>
                    <td>@item.firstName</td>
                    <td>@item.lastName</td>
                   

                    <td>
                        <button class="btn btn-success btn-sm confirmMember "  type="button" data-chatMemberId="@item.Id" data-name="@item.firstName" data-surname="@item.lastName">Kabul Et</button>
                        <button class="btn btn-danger btn-sm deleteChatMemberBtn"  data-id="@item.Id" data-name="@item.firstName" data-surname="@item.lastName">Reddet</button>
                    </td>
                 

                </tr>

                i++;
            }

           
        </tbody>
    </table>

</div>

<div class="modal fade" id="confirmMemberModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered  " role="document">
        <div class="modal-content col-6">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Çalışan Telegramı Ekle</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <i class="fa-regular fa-circle-xmark fa-xl" style="color: white;"></i>
                </button>
            </div>

            <ul class="nav nav-tabs nav-fill" role="tablist">
               
                <li class="nav-item">
                    <a class="nav-link " id="project-add-members-tab" data-bs-toggle="tab" href="#project-add-members" role="tab" aria-controls="project-add-members" aria-selected="true">Çalışanlar</a>
                </li>
            </ul>
            
            <form id="confirmMemberForm" >
                <div class="modal-body">

                    <div class="tab-content">
                        <div class="tab-pane fade active show" id="project-add-members" role="tabpanel">
                            <div class="form-members">
                                <div id="membersList">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit"  id="setMemberIdButton" class="btn btn-primary">Şirkete Kaydet</button>
                </div>

            </form>
            
            
               
        </div>
    </div>
</div>

